@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İş Takip Sistemi</title>
    <meta name="keywords" content="" />

    <link href="/web/css/style.css" rel="stylesheet" type="text/css" media="all">

    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">

    <script>
        window.addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
</head>

<body>
    <div class="mid-class d-flex justify-content-center align-items-center vh-100">
        <div class="art-right-w3ls">
            <h2 style="text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);">İŞ TAKİP SİSTEMİ GİRİŞ SAYFASI</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin w-300", style = "text-align: left;" }))
            {
                <h1 class="h3 mb-3 fw-normal" style="color: #fff; font-size: 18px;">Hoşgeldiniz, Lütfen Giriş Yapınız</h1>
                <br />
                <div class="form-left-to-w3l">
                    <input type="text" class="form-control" id="kullaniciAd" name="kullaniciAd" required placeholder="Kullanıcı Adınız" style="font-size: 16px;" />
                </div>
                <br />
                <div class="form-left-to-w3l">
                    <input type="password" class="form-control" id="parola" name="parola" placeholder="Şifre" style="font-size: 16px;" required />
                </div>
                <br />
                <button class="btn btn-primary w-100 py-2" type="submit">Giriş</button>
                <br />
                if (ViewBag.mesaj != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <p style="color: darkred; font-size: 16px;">
                            @ViewBag.mesaj
                        </p>
                    </div>
                }
            }
        </div>
    </div>
    <footer class="bottem-wthree-footer">
        <p>
            © 2024 Erciyes Üniversitesi Bilgi İşlem Daire Başkanlığı | Design by
            <a href="http://www.W3Layouts.com" target="_blank">W3Layouts</a>
        </p>
    </footer>
</body>

</html>
