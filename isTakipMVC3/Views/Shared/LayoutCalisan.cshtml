
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Is Takip Admin Çalışan</title>
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Iş Takip Çalışan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Anasayfa", "Index", "Calisan", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Is Takip", "Takip", "Calisan", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <div class=" d-flex nav-item">
                    @Html.ActionLink("Çıkış", "Index", "Logout", new { }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Is Takip Sistemi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


@* yönetici için layout sayfamızı oluşturduk sıra index (controller)sayfasında *@
