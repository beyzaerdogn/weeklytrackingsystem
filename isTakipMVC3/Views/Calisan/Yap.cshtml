@{
    ViewBag.Title = "Yap";
    Layout = "~/Views/Shared/LayoutCalisan.cshtml";
    isTakipMVC3.Models.isler i = @ViewBag.isler;
}

<div class="container mt-5">
        @using (Html.BeginForm("Yap", "Calisan", FormMethod.Post))
        {
            <div class="card">
                <div class="card-header text-center">
                    @i.isBaslık
                </div>
                <div class="card-body">
                    @i.isAcıklama
                    <input type="hidden" name="isId" value="@i.isId" />
                    <div class="mb-3">İş Açıklaması : @i.isAcıklama</div>
                    <div class="mb-3">
                        <label for="isYorum" class="form-label">Yorum Giriniz :</label>
                        <input type="text" class="form-control" id="isYorum" name="isYorum" />
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-outline-success">Tamamla</button>
                </div>
            </div>
            <br />
        }
    
</div>
